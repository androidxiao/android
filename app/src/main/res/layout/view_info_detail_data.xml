<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
       xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.duomizhibo.phonelive.widget.AvatarView
            android:layout_gravity="center"
            android:id="@+id/iv_avatar"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:contentDescription="@null" />

        <LinearLayout
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="30dp">
                <LinearLayout
                    android:gravity="center"
                    android:layout_centerVertical="true"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:maxEms="4"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        tools:text="姓名"
                        android:textSize="@dimen/text_size_15" />
                    <LinearLayout
                        android:gravity="center_vertical"
                        android:layout_marginLeft="6dp"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/iv_sex"
                            style="@style/live_sex_style"
                            tools:src="@drawable/choice_sex_male"/>
                        <ImageView
                            android:layout_marginLeft="5dp"
                            android:id="@+id/iv_anchorlevel"
                            tools:src="@drawable/anchor_level1"
                            style="@style/live_level_style"/>
                        <ImageView
                            android:layout_marginLeft="5dp"
                            android:id="@+id/iv_level"
                            tools:src="@drawable/user_level14"
                            style="@style/live_level_style"/>
                    </LinearLayout>

                </LinearLayout>


            </RelativeLayout>
            <TextView
                android:id="@+id/id_tv_source_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_15"
                tools:text="绑定账号：13051912222"/>


        </LinearLayout>

        <LinearLayout
            android:gravity="center_vertical|right"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:textSize="@dimen/text_size_10"
                android:id="@+id/tv_edit_info"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableRight="@mipmap/personal_edit"/>
            <ImageView
                android:layout_marginLeft="5dp"
                android:src="@drawable/me_go"
                android:layout_width="10dp"
                android:layout_height="10dp"/>
        </LinearLayout>
    </LinearLayout>

</merge>