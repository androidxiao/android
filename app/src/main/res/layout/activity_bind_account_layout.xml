<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/more_black"
              android:orientation="vertical">

    <com.duomizhibo.phonelive.ui.customviews.ActivityTitle
        android:id="@+id/view_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:titleColor="@color/white"
        app:titleText="绑定账号"/>

    <View
        style="@style/h_line_yellow"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:gravity="center"
        android:orientation="vertical">
        <ImageView
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:src="@mipmap/ic_bind_bg"/>

    </LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:padding="15dp">

        <com.duomizhibo.phonelive.widget.BlackTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/space_7"
            android:layout_weight="1.5"
            android:text="@string/account"
            android:textColor="@color/text_grey"
            android:textSize="18dp"/>

        <com.duomizhibo.phonelive.widget.BlackEditText
            android:id="@+id/et_password"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:background="@null"
            android:hint="@string/bind_account_hint"
            android:textColor="@color/white"
            android:inputType="textPassword"
            android:textColorHint="@color/text_value_grey"/>


    </LinearLayout>

    <View
        style="@style/h_line_grey"
        android:layout_marginLeft="@dimen/space_15"
        android:layout_marginRight="@dimen/space_15"
        />


    <com.duomizhibo.phonelive.widget.BlackButton
        android:id="@+id/btn_dologin"
        android:layout_width="270dp"
        android:layout_height="45dp"
        android:layout_below="@+id/ll_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn_common"
        android:text="@string/bind_account"
        android:textColor="@color/white"/>

